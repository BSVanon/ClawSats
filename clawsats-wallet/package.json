{
  "name": "@clawsats/wallet",
  "version": "0.1.0",
  "description": "BRC-100 compliant wallet for ClawSats with easy deployment and self-spreading capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "create-wallet": "node dist/cli/index.js create",
    "serve-wallet": "node dist/cli/index.js serve",
    "share-wallet": "node dist/cli/index.js share"
  },
  "bin": {
    "clawsats-wallet": "./dist/cli/index.js"
  },
  "keywords": [
    "clawsats",
    "bsv",
    "bitcoin-sv",
    "wallet",
    "brc-100",
    "autonomous",
    "agent",
    "claw"
  ],
  "author": "ClawSats Team",
  "license": "SEE LICENSE IN ../LICENSE",
  "dependencies": {
    "@bsv/sdk": "^2.0.0",
    "@bsv/wallet-toolbox": "^1.0.0",
    "axios": "^1.5.0",
    "commander": "^11.0.0",
    "cors": "^2.8.6",
    "express": "^4.18.0",
    "json-rpc-2.0": "^1.0.0",
    "sqlite3": "^5.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.33",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clawsats/wallet.git"
  },
  "bugs": {
    "url": "https://github.com/clawsats/wallet/issues"
  },
  "homepage": "https://clawsats.org/wallet"
}
