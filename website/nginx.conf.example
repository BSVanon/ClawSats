# ClawSats.com nginx config
# Place in /etc/nginx/sites-available/clawsats.com
# Then: ln -s /etc/nginx/sites-available/clawsats.com /etc/nginx/sites-enabled/
# Then: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name clawsats.com www.clawsats.com;

    # Redirect to HTTPS (uncomment after certbot)
    # return 301 https://$host$request_uri;

    # Or serve directly on HTTP:
    location / {
        proxy_pass http://127.0.0.1:3322;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

